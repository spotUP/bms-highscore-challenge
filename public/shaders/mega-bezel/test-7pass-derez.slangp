# Test 7 Passes - Try adding derez pass at beginning

shaders = 7

# Pass 0: Derez (sharpening/scaling)
shader0 = shaders/guest/extras/hsm-drez-g-sharp_resampler.slang
filter_linear0 = false
scale_type0 = source
scale0 = 1.0
alias0 = "DerezedPass"

# Pass 1: FXAA
shader1 = shaders/fxaa/fxaa.slang
filter_linear1 = true
float_framebuffer1 = true
scale_type1 = source
scale1 = 1.0
alias1 = "AntiAliasPass"

# Pass 2: Color grading
shader2 = shaders/dogway/hsm-grade.slang
filter_linear2 = false
scale_type2 = source
scale2 = 1.0
alias2 = "ColorCorrectPass"

# Pass 3: Sharpening
shader3 = shaders/guest/hsm-custom-fast-sharpen.slang
filter_linear3 = true
scale_type3 = source
scale3 = 1.0
alias3 = "SharpenPass"

# Pass 4: Stock prepass
shader4 = shaders/base/stock.slang
filter_linear4 = true
scale_type4 = source
scale4 = 1.0
alias4 = "PrePass"
mipmap_input4 = true

# Pass 5: Interlace and linearize
shader5 = shaders/guest/hsm-interlace-and-linearize.slang
filter_linear5 = true
scale_type5 = source
scale5 = 1.0
float_framebuffer5 = true
alias5 = "LinearizePass"

# Pass 6: Simple CRT (FINAL)
shader6 = ../simple-crt.slang
filter_linear6 = true
scale_type6 = viewport
scale6 = 1.0

# Textures
textures = "SamplerLUT1;SamplerLUT2;SamplerLUT3;SamplerLUT4"
SamplerLUT1 = shaders/guest/lut/trinitron-lut.png
SamplerLUT1_linear = true
SamplerLUT2 = shaders/guest/lut/inv-trinitron-lut.png
SamplerLUT2_linear = true
SamplerLUT3 = shaders/guest/lut/nec-lut.png
SamplerLUT3_linear = true
SamplerLUT4 = shaders/guest/lut/ntsc-lut.png
SamplerLUT4_linear = true

# Parameters
HSM_FXAA_ON = 1
SHARPEN_ON = 1
CSHARPEN = 0.7
GRADE_ON = 1
HSM_SCREEN_SCALE_GSHARP_MODE = 1
