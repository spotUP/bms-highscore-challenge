# Minimal CRT Guest Advanced test
# Just the essential passes to get CRT Guest working

shaders = 3

# Pass 0: Stock passthrough
shader0 = shaders/base/stock.slang
filter_linear0 = false
scale_type0 = source
scale0 = 1.0
alias0 = "PrePass"

# Pass 1: CRT Guest Advanced (the main CRT shader)
shader1 = shaders/guest/hsm-crt-guest-advanced-potato.slang
filter_linear1 = true
scale_type1 = viewport
scale1 = 1.0
float_framebuffer1 = true

# Pass 2: Deconvergence (final composite)
shader2 = shaders/guest/hsm-deconvergence-potato.slang
filter_linear2 = true
scale_type2 = viewport
scale2 = 1.0

# Textures for CRT mask
textures = "SamplerLUT1;SamplerLUT2;SamplerLUT3;SamplerLUT4"
SamplerLUT1 = shaders/guest/lut/trinitron-lut.png
SamplerLUT1_linear = true
SamplerLUT2 = shaders/guest/lut/inv-trinitron-lut.png
SamplerLUT2_linear = true
SamplerLUT3 = shaders/guest/lut/nec-lut.png
SamplerLUT3_linear = true
SamplerLUT4 = shaders/guest/lut/ntsc-lut.png
SamplerLUT4_linear = true

