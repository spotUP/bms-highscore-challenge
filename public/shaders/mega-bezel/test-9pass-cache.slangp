# Test 9 Passes - Add cache-info

shaders = 9

# Pass 0: Derez
shader0 = shaders/guest/extras/hsm-drez-g-sharp_resampler.slang
filter_linear0 = false
scale_type0 = source
scale0 = 1.0
alias0 = "DerezedPass"

# Pass 1: Cache info
shader1 = shaders/base/cache-info-potato-params.slang
filter_linear1 = false
scale_type1 = source
scale1 = 1.0
alias1 = "InfoCachePass"

# Pass 2: FXAA
shader2 = shaders/fxaa/fxaa.slang
filter_linear2 = true
float_framebuffer2 = true
scale_type2 = source
scale2 = 1.0
alias2 = "AntiAliasPass"

# Pass 3: Color grading
shader3 = shaders/dogway/hsm-grade.slang
filter_linear3 = false
scale_type3 = source
scale3 = 1.0
alias3 = "ColorCorrectPass"

# Pass 4: Sharpening
shader4 = shaders/guest/hsm-custom-fast-sharpen.slang
filter_linear4 = true
scale_type4 = source
scale4 = 1.0
alias4 = "SharpenPass"

# Pass 5: Stock prepass
shader5 = shaders/base/stock.slang
filter_linear5 = true
scale_type5 = source
scale5 = 1.0
alias5 = "PrePass"
mipmap_input5 = true

# Pass 6: Afterglow
shader6 = shaders/guest/hsm-afterglow0.slang
filter_linear6 = true
scale_type6 = source
scale6 = 1.0
alias6 = "AfterglowPass"

# Pass 7: Interlace and linearize
shader7 = shaders/guest/hsm-interlace-and-linearize.slang
filter_linear7 = true
scale_type7 = source
scale7 = 1.0
float_framebuffer7 = true
alias7 = "LinearizePass"

# Pass 8: Simple CRT (FINAL)
shader8 = ../simple-crt.slang
filter_linear8 = true
scale_type8 = viewport
scale8 = 1.0

# Textures
textures = "SamplerLUT1;SamplerLUT2;SamplerLUT3;SamplerLUT4"
SamplerLUT1 = shaders/guest/lut/trinitron-lut.png
SamplerLUT1_linear = true
SamplerLUT2 = shaders/guest/lut/inv-trinitron-lut.png
SamplerLUT2_linear = true
SamplerLUT3 = shaders/guest/lut/nec-lut.png
SamplerLUT3_linear = true
SamplerLUT4 = shaders/guest/lut/ntsc-lut.png
SamplerLUT4_linear = true

# Parameters
HSM_FXAA_ON = 1
SHARPEN_ON = 1
CSHARPEN = 0.7
GRADE_ON = 1
HSM_SCREEN_SCALE_GSHARP_MODE = 1
HSM_ASPECT_RATIO_MODE = 1
