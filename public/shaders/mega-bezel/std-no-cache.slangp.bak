float_framebuffer27 = true

shader28 = shaders/base/blur-outside-screen-vert.slang
filter_linear28 = true
wrap_mode28 = "mirrored_repeat"
float_framebuffer28 = true
alias28 = "ReflectPrepBlurredPass"

shader29 = shaders/base/do-nothing.slang
mipmap_input29 = true
filter_linear29 = true
scale_type29 = absolute
scale_x29 = 8
scale_y29 = 8

# ============================================================================
# TIER 7: FINAL COMPOSITE (Passes 30-31)
# ============================================================================

shader30 = shaders/base/reflection.slang
