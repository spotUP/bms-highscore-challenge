# MEGA BEZEL STD - NO CACHE VERSION
# Full STD preset WITHOUT the complex cache-info passes that cause "Expression too complex" error
# This sacrifices parameter caching for compatibility
# ALSO TEMPORARILY SKIP text-pass due to compilation errors

shaders = 30

# ============================================================================
# TIER 1: ESSENTIAL FOUNDATION (Passes 0-2) - SKIP CACHE
# ============================================================================

shader0 = shaders/base/drez-none.slang
filter_linear0 = false
srgb_framebuffer0 = true
scale_type0 = source
scale_x0 = 1
scale_y0 = 1

# SKIP: shader1 = cache-info (too complex for WebGL)

# SKIP text-pass (causes int/float comparison errors)
# shader1 = shaders/base/text-pass.slang
# filter_linear1 = false
# float_framebuffer1 = true
# scale_type1 = source
# scale1 = 1.0

shader1 = shaders/base/fetch-drez-output.slang
filter_linear2 = false
srgb_framebuffer2 = true
scale_type2 = source
scale_x2 = 1
scale_y2 = 1

shader3 = shaders/fxaa/fxaa.slang
filter_linear3 = true
float_framebuffer3 = true
alias3 = "DeditherPass"

# ============================================================================
# TIER 2: PRE-CRT PROCESSING (Passes 4-12)
# ============================================================================

