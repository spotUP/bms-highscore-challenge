# CRT GUEST ONLY - Testing with main CRT shaders
# This preset includes CRT Guest Advanced effects
# Adding glow, bloom, and main CRT shader for scanlines/mask
# TEMP: Removed intro pass (shader3) to debug 2-second black issue

shaders = 10

shader0 = shaders/base/drez-none.slang
filter_linear0 = false
srgb_framebuffer0 = true
scale_type0 = source
scale_x0 = 1
scale_y0 = 1

shader1 = shaders/base/fetch-drez-output.slang
filter_linear1 = false
srgb_framebuffer1 = true
scale_type1 = source
scale_x1 = 1
scale_y1 = 1

shader2 = shaders/fxaa/fxaa.slang
filter_linear2 = true
float_framebuffer2 = true
alias2 = "DeditherPass"

HSM_NON_USER_INFO_PRE_CRT_CHAIN = 2

# SKIP intro pass - suspected cause of 2-second black screen
# shader3 = shaders/base/intro.slang
# filter_linear3 = false
# float_framebuffer3 = true
# scale_type3 = source
# scale3 = 1.0

shader3 = shaders/base/stock.slang
alias3 = "PreCrtPass"

shader4 = shaders/guest/hsm-afterglow0.slang
filter_linear4 = true
scale_type4 = source
scale4 = 1.0
alias4 = "AfterglowPass"

shader5 = shaders/guest/hsm-pre-shaders-afterglow.slang
filter_linear5 = true
scale_type5 = source
mipmap_input5 = true
scale5 = 1.0

shader7 = shaders/dogway/hsm-grade.slang
filter_linear7 = false
scale_type7 = source
scale7 = 1.0
alias7 = "ColorCorrectPass"

shader8 =  shaders/guest/hsm-custom-fast-sharpen.slang
filter_linear8 = true
scale_type8 = source
scale_x8 = 1.0
scale_y8 = 1.0

shader9 = shaders/base/stock.slang
filter_linear9 = true
scale_type9 = source
scale_x9 = 1.0
scale_y9 = 1.0
alias9 = "PrePass"
mipmap_input9 = true

shader10 = shaders/guest/hsm-avg-lum.slang
filter_linear10 = true
scale_type10 = source
scale10 = 1.0
mipmap_input10 = true
alias10 = "AvgLumPass"

shader11 = shaders/guest/hsm-interlace-and-linearize.slang
filter_linear11 = true
scale_type11 = source
scale11 = 1.0
float_framebuffer11 = true
alias11 = "LinearizePass"

shader12 = shaders/base/do-nothing.slang
mipmap_input12 = false
filter_linear12 = true
scale_type12 = absolute
scale_x12 = 8
scale_y12 = 8

# Final passthrough to screen
shader19 = shaders/base/stock.slang
filter_linear19 = true
scale_type19 = viewport
scale_x19 = 1.0
scale_y19 = 1.0

# Textures
textures = "SamplerLUT1;SamplerLUT2;SamplerLUT3;SamplerLUT4;DitherNoise;IntroImage"

SamplerLUT1 = shaders/guest/lut/trinitron-lut.png
SamplerLUT1_linear = true
SamplerLUT2 = shaders/guest/lut/inv-trinitron-lut.png
SamplerLUT2_linear = true
SamplerLUT3 = shaders/guest/lut/nec-lut.png
SamplerLUT3_linear = true
SamplerLUT4 = shaders/guest/lut/ntsc-lut.png
SamplerLUT4_linear = true

DitherNoise = shaders/textures/DitherNoise_BlueNoise.png
DitherNoise_linear = false
DitherNoise_mipmap = false
DitherNoise_wrap_mode = "repeat"

IntroImage = shaders/textures/IntroLogo_MegaBezel.png
IntroLogo_linear = true
IntroLogo_mipmap = 1

HSM_NON_USER_INFO_POST_CRT_PROCESS = 0
